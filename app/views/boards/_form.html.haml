= form_for @board do |f|
  -if @board.errors.any?
    #error_explanation
      %h2= "#{pluralize(@board.errors.count, "error")} prohibited this board from being saved:"
      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg

  
  .field
    = f.label :code
    = f.text_field :code

  .field
    = f.label :name
    = f.text_field :name
  .field
    =f.label :post_counter
    =f.text_field :post_counter
  .actions
    = f.submit 'Save'

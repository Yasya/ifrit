= form_for @node do |f|
  -if @node.errors.any?
    #error_explanation
      %h2= "#{pluralize(@node.errors.count, "error")} prohibited this node from being saved:"
      %ul
        - @node.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :head
    = f.text_field :head
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :picture
    = f.file_field :picture
    = f.hidden_field :picture_cache
  .field
    = f.hidden_field :parent, :value => '1'
  .actions
    = f.submit 'Save'
